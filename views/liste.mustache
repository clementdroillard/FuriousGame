<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>Furious Game</title>
		<link href="vendor/components/font-awesome/css/font-awesome.min.css" rel="stylesheet">
		<link href="vendor/twbs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
		<meta name="keywords" content="" />
		<meta name="description" content="" />
		<link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800|Open+Sans+Condensed:300,700" rel="stylesheet" />
		<link href="styles/default.css" rel="stylesheet" type="text/css" media="all" />
		<link href="styles/fonts.css" rel="stylesheet" type="text/css" media="all" />
		<script src="scripts/script.js"></script>
	</head>
	<body>
		<div id="logo" class="container">
			<h1><span class="icon icon-list-ol icon-size"></span><a href=""><span>Furious Game</span></a></h1>
		</div>
		<div id="wrapper" class="container">
			<div id="liste" class="container">
				<div><span class="arrow-down"></span></div>
					<div class="title">
						<h2>Choisir un aventurier :</h2>
					</div>
					<ul id =ul class="list-group">
					 	{{#listeAventurier}}
						 		<li id =li{{idAventurier}} class="list-group-item">
						 			<span  id=element{{idAventurier}}>
							 			<span id=lib{{idAventurier}} style="font-size: x-large;">
							 				<input id="radioPerso{{idAventurier}}" name="aventurierRadio" type="radio" value="{{idAventurier}}" checked= true> 
							 				Nom : "{{nom}}" vie : "{{vie}}" magie : "{{magie}}"
							 			</span>
						 			</span>
							 		<!--	{{! les boutons  }} 
							 		<span id=boutton{{id}}>
							 			<button id="btnSpr{{id}}" class="btn btn-danger fa fa-trash" onclick="supprimer({{id}});"/>
							 			<button id="btnVal{{id}}" class="btn btn-success fa fa-check-square" onclick="valider({{id}});"/> 
							 		</span> -->
						 		</li>
					 	{{/listeAventurier}}
			 	</ul>
			</div>
			<div id="insert" class="container">
				<div><span class="arrow-down"></span></div>
				<div class="title">
					<h2>Selectionner le joueur :</h2>
				</div>
				<ul id =ul class="list-group">
					 	{{#listeJoueur}}
						 		<li id =li{{idJoueur}} class="list-group-item">
						 			<span  id=element{{idJoueur}}>
							 			<span id=lib{{idJoueur}} style="font-size: x-large;">
							 				<input id="radioJoueur{{idJoueur}}" name="joueurRadio" type="radio" value="{{idJoueur}}" checked= true /> 
							 				Nom : "{{nom}}"
							 			</span>
						 			</span>
							 		<!--	{{! les boutons  }} 
							 		<span id=boutton{{id}}>
							 			<button id="btnSpr{{id}}" class="btn btn-danger fa fa-trash" onclick="supprimer({{id}});"/>
							 			<button id="btnVal{{id}}" class="btn btn-success fa fa-check-square" onclick="valider({{id}});"/> 
							 		</span> -->
						 		</li>
					 	{{/listeJoueur}}
			 	</ul>

				 <div class="actions"><button type="button" class="btn btn-primary" style="font-size: xx-large;" onclick="ajouter();" >Associer</button></div>	
			</div>
		</div>
	</body>
</html>
